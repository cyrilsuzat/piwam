<h2>Configuration</h2>

<%= form_tag association_path do %>
  <table class="table" style="width: 540px;">
    <tr>
      <th width="165"><%= label_tag :association_association_name, t('association.association_name') %></th>
      <td><%= text_field_tag 'association[association_name]', Setting.association_name %></td>
    </tr>
    <tr>
      <th><%= label_tag :association_association_description, t('association.association_description') %></th>
      <td><%= text_area_tag 'association[association_description]', Setting.association_description, rows: 5 %></td>
    </tr>
    <tr>
      <th><%= label_tag :association_association_website, t('association.association_website') %></th>
      <td><%= text_field_tag 'association[association_website]', Setting.association_website %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= submit_tag 'Sauvegarder', class: 'btn-submit' %></td>
    </tr>
  </table>
<% end %>

<script>
$(function () {
  $('[data-toggle="popover"]').popover({trigger: 'hover'})
})
</script>