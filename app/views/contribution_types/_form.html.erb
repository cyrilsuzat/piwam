<%= form_for @contribution_type do |f| %>
  <%= render 'application/error_messages', target: @contribution_type %>

  <table class="table" style="width:455px;">
    <tr>
      <th width="90"><%= f.label :label %>*</th>
      <td><%= f.text_field :label %></td>
    </tr>
    <tr>
      <th><%= f.label :expires_on %>*</th>
      <td><%= f.text_field :expires_on, value: @contribution_type.expires_on ? l(@contribution_type.expires_on) : nil, class: 'datepicker', style: 'width:150px' %></td>
    </tr>
    <tr>
      <th><%= f.label :amount %>*</th>
      <td><%= f.text_field :amount, style: 'width:90px' %> <%= Setting.currency %></td>
    </tr>
    <tr>
      <td colspan="2">
        <%= link_to 'Annuler', contribution_types_path, class: 'btn-action' %>
        <%= link_to 'Supprimer', @contribution_type, method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: 'btn-action' unless @contribution_type.new_record? %>
        <%= f.submit 'Sauvegarder', class: 'btn-submit' %>
      </td>
    </tr>
  </table>
<% end %>