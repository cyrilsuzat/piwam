<%= form_for @status do |f| %>
  <%= render 'application/error_messages', target: @status %>

  <table class="table" style="width:280px">
    <tr>
      <th width="130"><%= f.label :label %></th>
      <td><%= f.text_field :label %></td>
    </tr>
    <tr>
      <td colspan="2">
        <%= link_to 'Annuler', statuses_path, class: 'btn-action' %>
        <%= link_to 'Supprimer', @status, method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: 'btn-action' unless @status.new_record? %>
        <%= f.submit 'Enregistrer', class: 'btn-submit' %>
      </td>
    </tr>
  </table>
<% end %>