<h2>Gestion des statuts</h2>

<table class="table table-bordered table-hover">
  <tr>
    <th>Libellé</th>
    <th width="70">Membres</th>
    <th width="60">Actions</th>
  </tr>
  <% @statuses.each do |status| %>
    <tr>
      <td><%= status.label %></td>
      <td><%= status.members_count %></td>
      <td>
        <%= link_to image_tag('edit.png'), edit_status_path(status) if can? :update, status %>
        <%= link_to image_tag('delete.png'), status, method: :delete, data: { confirm: 'Êtes-vous sûr ?' } unless status.members_count > 0 or cannot? :destroy, status%>
      </td>
    </tr>
  <% end %>
</table>

<a href="<%= new_status_path %>" class="btn"><%= image_tag('add.png') %> Nouveau statut</a>
