<%= form_for(@mailing) do |f| %>
  <%= render 'application/error_messages', target: @mailing %>

  <table class="table">
    <tr>
      <th width="110"><%= f.label :subject %></th>
      <td><%= f.text_field :subject %></td>
    </tr>
    <tr>
      <th><%= f.label :to %></th>
      <td>Tout le monde</td>
    </tr>
    <tr>
      <th><%= f.label :body %></th>
      <td><%= f.text_area :body, rows: 20 %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit 'Envoyer', class: 'btn-submit' %></td>
    </tr>
  </table>
<% end %>

<script type="text/javascript">
$(function() {
  $('#mailing_body').trumbowyg({
    lang: 'fr',
    fullscreenable: false,
    btns: [
      'viewHTML', '|',
      'bold', 'italic', 'strikethrough', '|',
      'justifyLeft', 'justifyCenter', 'justifyRight', '|',
      'link', '|',
      'insertImage', '|',
      'horizontalRule'
    ]
  });
});
</script>